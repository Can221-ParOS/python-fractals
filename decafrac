#!/usr/bin/env python

import turtle
from turtle import *

def drawKoch(t, order, size):
    if order == 0:
       t.forward(size)
    else:
        drawKoch(t, order-1, size/3)
        t.left(60)
        drawKoch(t, order-1, size/3)
        t.right(120)
        drawKoch(t, order-1, size/3)
        t.left(60)
        drawKoch(t, order-1, size/3)

def koch(t, order, size):
    drawKoch(t, order, size)
    t.right(120)
    drawKoch(t, order, size)
    t.right(120)
    drawKoch(t, order, size)
    t.right(120)
    drawKoch(t, order, size)
    t.right(120)
    drawKoch(t, order, size)
    t.right(120)
    drawKoch(t, order, size)
 
def koch2(t, order, size):
    drawKoch(t, order, size)
    t.right(128.57143)
    drawKoch(t, order, size)
    t.right(128.57143)
    drawKoch(t, order, size)
    t.right(128.57143)
    drawKoch(t, order, size)
    t.right(128.57143)
    drawKoch(t, order, size)
    t.right(128.57143)
    drawKoch(t, order, size)
    t.right(128.57143)
    drawKoch(t, order, size)

def koch3(t, order, size):
    drawKoch(t, order, size)
    t.right(147.27273)
    drawKoch(t, order, size)
    t.right(147.27273)
    drawKoch(t, order, size)
    t.right(147.27273)
    drawKoch(t, order, size)
    t.right(147.27273)
    drawKoch(t, order, size)
    t.right(147.27273)
    drawKoch(t, order, size)
    t.right(147.27273)
    drawKoch(t, order, size)

def koch4(t, order, size):
    drawKoch(t, order, size)
    t.right(60)
    drawKoch(t, order, size)
    t.right(60)
    drawKoch(t, order, size)
    t.right(60)
    drawKoch(t, order, size)
    t.right(60)
    drawKoch(t, order, size)
    t.right(60)
    drawKoch(t, order, size)

screen = Screen()
screen.setup(640,640)
screen.title('Koch Fractal')
screen.bgcolor('#333333')
t = turtle.Turtle()
t.hideturtle()
t.speed(0)
t.penup()
t.setx(-5)
t.sety(0)
t.pendown()
t.color('#1793d1')
t2 = turtle.Turtle()
t2.hideturtle()
t2.speed(0)
t2.penup()
t2.setx(-5)
t2.sety(130)
t2.pendown()
t2.color('#DF00FF')
t3 = turtle.Turtle()
t3.hideturtle()
t3.speed(0)
t3.penup()
t3.setx(-5)
t3.sety(70)
t3.pendown()
t3.color('#CC3333')
t4 = turtle.Turtle()
t4.hideturtle()
t4.speed(0)
t4.penup()
t4.setx(-5)
t4.sety(0)
t4.pendown()
t4.color('#FF8243')
t5 = turtle.Turtle()
t5.hideturtle()
t5.speed(0)
t5.penup()
t5.setx(-5)
t5.sety(70)
t5.pendown()
t5.color('#CC3333')

koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch3(t3, 4, 300)
koch2(t2, 3, 100)
koch2(t2, 3, 100)
koch2(t2, 3, 100)
koch2(t2, 3, 100)
koch2(t2, 3, 100)
koch2(t2, 3, 100)
koch2(t2, 3, 100)
koch4(t4, 4, 200)
koch4(t4, 4, 200)
koch4(t4, 4, 200)
koch4(t4, 4, 200)
koch4(t4, 4, 200)
koch4(t4, 4, 200)
koch(t, 3, 100)
koch(t, 3, 100)
koch(t, 3, 100)
turtle.mainloop()
